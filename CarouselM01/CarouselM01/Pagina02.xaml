<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarouselM01.Pagina02"
             Title="Página 02">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">
            <Label Text="Página 02" 
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold"
                   FontSize="30"
                   TextColor="White"/>
            <Label Text="Página 03 dentro do CarouselPage" FontSize="20"
                   FontAttributes="Bold" TextColor="DarkViolet"
                   HorizontalTextAlignment="Center"/>
            <Button Text="Página MainPage" Clicked="BtVoltarMainpage"
                    WidthRequest="400" HeightRequest="50"
                    TextColor="Black"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>